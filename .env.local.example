# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Google Maps API (for territory maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# App URL (for OAuth callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google Calendar OAuth (for two-way calendar sync)
GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_calendar_client_secret

# Google Service Account (for Sheets, Calendar sync, and server-side API routes)
# You already have this - it's used for both Sheets and Calendar sync
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Gmail (for email sending)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=

# AI Chat (Claude API)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Push Notifications (Firebase Cloud Messaging)
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_firebase_vapid_key
